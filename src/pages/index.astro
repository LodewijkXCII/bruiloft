---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import Riley from "../img/heart-529607_1280.jpg";
import ProgramCard from "../components/ProgramCard.astro";
import SigninForm from "../components/SigninForm.astro";
import FAQCard from "../components/FAQCard.astro";
---

<Layout title="Loek en Nicolien gaan trouwen!">
  <main>
    <header class="wrapper">
      <div class="image">
        <img src="img/wedding.jpg" alt="" />
      </div>
      <div class="save-the-date">
        <h1>Loek<br />&<br />Nicolien</h1>

        <div class="save-the-date--end">
          <span class="hr-line"></span>
          <h2>17.05.2025</h2>
        </div>
      </div>
    </header>

    <section id="informatie">
      <div class="card">
        <div class="card-text">
          <div class="card-heading">
            <h2>Informatie</h2>
            <p class="text-subtle paars">Vier de liefde!</p>
          </div>
          <div class="card-body">
            <p>
              Weâ€™re thrilled to invite you to celebrate our wedding in the heart
              of Friesland. Our website is your go-to source for all the
              essential details, including the event schedule, venue
              information, dress code, RSVP options, and travel arrangements. We
              look forward to sharing this beautiful day with you and creating
              unforgettable memories together!
            </p>
          </div>
          <div class="card-footer">
            <p>Meer informatie over:</p>
            <ul>
              <li><a href="#programma">Programma</a></li>
              <li><a href="#aanmelden">Aanmelden</a></li>
              <li><a href="#thema">Thema</a></li>
              <li><a href="#locatie">Locatie</a></li>
            </ul>
          </div>
        </div>
        <div class="card-image">
          <Image src={Riley} alt="" />
        </div>
      </div>
    </section>

    <section id="aanmelden">
      <div class="text">
        <div class="block-title">
          <h2 class="oranje">We horen graag of je erbij bent!</h2>
          <p class="text-subtle paars">Vier met ons!</p>
        </div>
        <SigninForm />
      </div>
    </section>

    <section id="thema" class="backdrop">
      <div class="text backdrop-text">
        <div class="block-title">
          <h2>Thema</h2>
